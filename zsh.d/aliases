# Global
alias ll="ls -lah"
alias cat="bat"

# Dotfile
alias dp="dotdrop"
alias dotconfig="cd $HOME/.dotfiles"

# VIM
alias vim="nvim"
alias vimconfig="vim ~/.config/nvim/init.vim"

# ZSH
alias zshconfig="vim ~/.zshrc"
alias zshreload="source ~/.zshrc"

# TERRAFORM
alias tf="terraform"
alias tfp="terraform plan | scenery"
alias tfa="terraform apply -auto-approve"
alias tg="terragrunt"

# GIT
alias gitconfig="vim $HOME/.gitconfig"

# SSH
alias sshconfig="vim $HOME/.ssh/config"
alias sshdir="cd $HOME/.ssh/"

# AWS
alias aws-whoami="aws sts get-caller-identity"
alias awsconfig="vim $HOME/.aws/config"

# K8S
alias kc="kubectl"
alias kx="kubectx"
alias kubeconfig="vim $HOME/.kube/config"

# VSCode
alias code="codium"

# Kitty
kittyconfig="vim $HOME/.config/kitty/kitty.conf"
kittydir="cd $HOME/.config/kitty"

# vim: set filetype=zsh:
